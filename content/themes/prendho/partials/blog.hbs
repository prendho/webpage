
{{#get "posts" order="published_at desc"  page=pagination.page limit=@blog.posts_per_page  filter="tag:{{tag.slug}}" include="author" as |item|}}
  {{#foreach item}}
    <h3><a href="{{url}}">{{title}}</a></h3> 
    <span>{{date format="MMMM DD, YYYY"}} /by: {{author}}</span>
    {{#if image}}
      <img src="{{image}}"  width="100%" height="250">
    {{/if}}
    <p>{{content}}</p>
  {{/foreach}}
{{/get}}
