<fieldset>
  <legend><h3>Categor√≠as</h3></legend>
  <ul class="text-left">
    {{#get "posts" order="asc" filter="tag:blog-category" as |item|}}
      {{#foreach item}}
        {{#if @first}}
          <li type="circle" target="_blank">
            <a href="/tag/blog/" class="text-uppercase">All</a>
          </li>
        {{/if}}
        <li type="circle" target="_blank">
          <a href="/tag/{{slug}}/" class="text-uppercase">{{title}}</a>
        </li>
      {{/foreach}}
    {{/get}}
  </ul>
</fieldset>
