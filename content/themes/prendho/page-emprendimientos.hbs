{{!< default}}
<div class="container-fluid">
  <div class="row">
    <div class="col-xs-offset-2 col-xs-8 col-sm-10 col-sm-offset-1 col-md-offset-2 col-md-8">
      {{> "common-gallery-post" item=post}}
    </div>
    <div class="col-xs-offset-2 col-xs-8">
      {{#get "posts" filter="tag:emprendimiento-category" order="published_at asc" include="tags" as |items|}}
        {{#foreach items}}
          <div class="row">
            <div class="col-xs-4 col-sm-2"> 
              <img src="{{image}}" class="img-responsive">
            </div>
            <div class="col-xs-8 col-sm-10">
              <h4><strong>{{title}}</strong></h4>
              <ul class="text-left">
                {{#get "posts" order="published_at asc" filter="tag:{{slug}}"}}
                  {{#foreach posts}}
                    <li>{{title}}</li>
                  {{/foreach}}
                {{/get}}
              </ul>
            </div>
          </div>
        {{/foreach}}
      {{/get}}
    </div>
  </div>
</div>
