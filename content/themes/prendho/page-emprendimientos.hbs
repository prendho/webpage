{{!< default}}
<div class="entrepreneurship container">
  <div class="row align-center">
    <div class="col-xs-8 col-sm-10 col-md-8">
      {{> "common-gallery-post" item=post}}
    </div>
    <div class="entrepreneurship-categories col-md-10">
      {{#get "posts" filter="tag:emprendimiento-category" order="published_at asc" include="tags" as |items|}}
        {{#foreach items}}
          <div class="entrepreneurship-category col-md-6 align-right align-middle">
            <div class="image">
              <img src="{{image}}" class="img-responsive">
            </div>
            <div class="info">
              <div class="info-content">
                <h4><strong>{{title}}</strong></h4>
                <ul class="text-left">
                  {{#get "posts" order="published_at asc" filter="tag:{{slug}}"}}
                    {{#foreach posts}}
                      <li>{{title}}</li>
                    {{/foreach}}
                  {{/get}}
                </ul>
              </div>
            </div>
          </div>
        {{/foreach}}
      {{/get}}
    </div>
  </div>
</div>
