{{!< default}}
<div class="container-fluid">
  <div class="row">
    {{#post}}
      {{#has tag="blog"}}
        <div class="col-xs-offset-2 col-xs-8 col-sm-10 col-sm-offset-1 col-md-offset-2 col-md-8 text-left">
          <h3>
            {{#foreach tags}}
              {{#if @first}}
                <img src="{{asset "static/ico_blog.png"}}">
                <a href="/tag/{{slug}}/">{{name}}</a>
              {{else}}
                <small>
                  <img src="{{asset "static/ico_nav_blog.png"}}">
                  <a href="/tag/{{slug}}/">{{name}}</a>
                </small>
              {{/if}}
            {{/foreach}}
          </h3>
        </div>
      {{/has}}
      <div class="col-xs-offset-2 col-xs-8 col-sm-10 col-sm-offset-1 col-md-offset-2 col-md-8 text-left">
        <h3><a href="{{url}}">{{title}}</a></h3>
        <span>{{date format="MMMM DD, YYYY"}} /by: {{author}}</span>
        {{#if image}}
          <img src="{{image}}"  width="100%" height="250">
        {{/if}}
        {{> "social-networks"}}
        <p>{{content}}</p>
      </div>
    {{/post}}
  </div>
</div>
